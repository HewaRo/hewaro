<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:theme="@style/AddActivityStyle"
    tools:context=".AddPostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#B6B6B6"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/image1"
                style="@style/AddPhoto"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:id="@+id/image2"
                style="@style/AddPhoto"
                android:layout_marginHorizontal="8dp"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:id="@+id/image3"
                style="@style/AddPhoto"
                android:contentDescription="@string/app_name" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Add_Spinner_Governorate_Layout"
            style="@style/AutoCompleteTextLayoutStyle">

            <AutoCompleteTextView

                android:id="@+id/Add_Spinner_Governorate"
                style="@style/AutoCompleteTextStyle"
                android:hint="@string/select_your_governorate" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Add_Spinner_Type_Layout"
            style="@style/AutoCompleteTextLayoutStyle"
            android:layout_marginVertical="12dp"
            >
            <AutoCompleteTextView
                android:id="@+id/Add_Spinner_Type"
                style="@style/AutoCompleteTextStyle"
                android:hint="@string/select_type"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Add_Spinner_Second_Layout"
           style="@style/AutoCompleteTextLayoutStyle">

            <AutoCompleteTextView
                android:id="@+id/Add_Spinner_Second"
                style="@style/AutoCompleteTextStyle"
                android:hint="What do you want to advertise for?"
                 />

        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/AdsCarSecondTypeLayout"
           style="@style/AutoCompleteTextLayoutStyle">

            <AutoCompleteTextView

                android:id="@+id/Ads_CarSecondTypeSpinner"
                style="@style/AutoCompleteTextStyle"
                android:hint="@string/select_type" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/AdsAddressSpinnerTVLayout"
            style="@style/AutoCompleteTextLayoutStyle">

            <AutoCompleteTextView

                android:id="@+id/Ads_AddCitySpinner"
                style="@style/AutoCompleteTextStyle"
                android:hint="@string/select_type"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/add_ad_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:backgroundTint="@color/main"
            android:text="@string/publish"/>


    </LinearLayout>

</ScrollView>