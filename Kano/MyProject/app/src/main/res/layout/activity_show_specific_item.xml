<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowSpecificItemActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="250dp"
        android:layout_width="match_parent">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:toolbarId="@+id/toolbar"
            app:layout_scrollFlags="exitUntilCollapsed|scroll|snap"
            app:layout_scrollInterpolator="@android:anim/decelerate_interpolator"
            app:contentScrim="@color/gray_28"
            android:background="@color/gray_28">


            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/show_specific_item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax"
                app:layout_constraintTop_toBottomOf="@id/view" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/Profile_TB_Tool_Bar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="#00ffffff"
                app:layout_collapseMode="pin"
                >

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="12dp">
            <TextView
                android:id="@+id/show_specific_item_tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/items_space_margin_top"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/price"
                android:textSize="24sp"/>
            <Button
                android:id="@+id/show_specific_item_btn_calculate_your_loan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/items_space_margin_top"
                android:text="@string/calculate_your_loan"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:padding="8dp"
                android:backgroundTint="@color/gray_80"
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/show_specific_item_tv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/items_space_margin_top"
                android:text="@string/type"
                android:textSize="24sp"/>
            <Button
                android:id="@+id/show_specific_item_btn_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/items_space_margin_top"
                android:text="@string/phone"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:padding="8dp"
                android:textSize="24sp"
                app:icon="@drawable/ic_baseline_call_24"
                app:iconGravity="textStart"
                app:iconTint="@color/white"
                app:iconPadding="8dp"/>
            <Button
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/show_specific_item_btn_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/items_space_margin_top"
                android:text="@string/chat"
                android:textAllCaps="false"
                android:textColor="@color/main"
                android:padding="8dp"
                android:textSize="24sp"
                app:strokeColor="@color/main"
                app:icon="@drawable/ic_chat_24"
                app:iconGravity="textStart"
                app:iconPadding="8dp"/>
            <LinearLayout
                android:layout_marginTop="@dimen/items_space_margin_top"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:id="@+id/show_specific_item_btn_favorite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/favorite"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:padding="8dp"
                    android:textSize="24sp"
                    app:strokeColor="@color/white"
                    app:icon="@drawable/check_box_style"
                    app:iconTint="@color/red"
                    app:iconGravity="textStart"
                    android:layout_marginEnd="6dp"
                    app:iconPadding="8dp"/>
                <Button
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:id="@+id/show_specific_item_btn_share"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/share"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:padding="8dp"
                    android:textSize="24sp"
                    app:strokeColor="@color/white"
                    app:icon="@drawable/ic_baseline_share_24"
                    app:iconTint="@color/gray_80"
                    app:iconGravity="textStart"
                    android:layout_marginStart="6dp"
                    app:iconPadding="8dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/gray_80"
                android:layout_marginTop="@dimen/items_space_margin_top"/>
            <TextView
                android:id="@+id/show_specific_item_tv_governorate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/governorate"
                android:textSize="24sp"
                android:drawablePadding="8dp"
                app:drawableStartCompat="@drawable/ic_baseline_location_on_24"
                app:drawableTint="@color/white" />
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/gray_80"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/show_specific_item_tv_details_layout"
                style="@style/ETLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/items_space_margin_top"
                android:gravity="start|top"
                android:hint="@string/details"
                app:boxBackgroundColor="#212121"
                app:boxCornerRadiusBottomEnd="42dp"
                app:expandedHintEnabled="false"
                app:hintEnabled="true"
                android:enabled="false"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/show_specific_item_tv_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start|top"
                    android:enabled="false"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>