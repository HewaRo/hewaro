<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_500</item>
        <item name="colorPrimaryVariant">@color/main_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>
    <style name="MyFacebookButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="icon">@drawable/facebook</item>
        <item name="iconSize">24dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">#00ffffff</item>
        <item name="iconTintMode">add</item>
        <item name="iconPadding">8dp</item>
        <item name="boxStrokeColor">#3F51B5</item>
        <item name="strokeColor">#3F51B5</item>
        <item name="strokeWidth">1dp</item>
    </style>
    <style name="gmailButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="icon">@drawable/google</item>
        <item name="iconSize">24dp</item>
        <item name="iconGravity">textStart</item>

        <item name="strokeColor">#88111C</item>
        <item name="iconTint">#00ffffff</item>
        <item name="iconTintMode">add</item>
        <item name="strokeWidth">1dp</item>
        <item name="iconPadding">8dp</item>

    </style>
    <style name="emailButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="icon">@drawable/email</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">#808080</item>

        <item name="iconGravity">textStart</item>
        <item name="boxStrokeColor">#3F51B5</item>
        <item name="strokeColor">#808080</item>
        <item name="strokeWidth">1dp</item>
        <item name="iconPadding">8dp</item>

    </style>
    <style name="MyButton" parent="@style/Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">0dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/teal_200</item>
    </style>
    <style name="ETLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="strokeColor">@color/teal_200</item>

    </style>
    <style name="AppNameStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">160sp</item>
        <item name="android:textColor">#808080</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">@font/fleur_de_leah_regular</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>
    <style name="AddPhoto" parent="Theme.MyProject">
        <item name="android:foreground">@drawable/photo_background_stroke</item>
        <item name="android:src">@drawable/ic_baseline_add_photo_alternate_24</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:padding">2dp</item>
        <item name="android:contentDescription">@string/app_name</item>

    </style>
    <style name="AddActivityStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="AutoCompleteTextLayoutStyle"
        parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>
    <style name="AutoCompleteTextStyle"
       >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:inputType">none</item>

    </style>
</resources>